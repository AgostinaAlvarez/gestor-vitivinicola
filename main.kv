<CustomLabel>:
    #text: 'Tareas programadas para hoy'
    #color=(0, 0, 0, 1)
    size_hint: 1, None
    padding: dp(10), 0, 0, 0
    font_size: dp(16)
    text_size: self.width, None
    halign: 'left'
    canvas.before:
        Color:
            rgba: 0.34, 0.15, 0.44, 1
        Rectangle:
            pos: self.pos
            size: self.size


<HeaderScreen>:
    orientation: 'horizontal'
    spacing:dp(10)
    padding: dp(15), 0, 0 , 0
    size_hint: 1,None
    height: dp(100)
    canvas.before:
        Color:
            rgba: 0.34, 0.15, 0.44, 1
        Rectangle:
            pos: self.pos
            size: self.size

    MDIcon:
        icon:'home'
        size_hint:None,1
        font_size: dp(27)
        pos_hint: {'center_y': 0.5}

    Label:
        text: 'Home Screen'
        color: 0,0,0,1
        font_size: dp(25)
        size_hint: None,1
        width: self.texture_size[0] if self.text else 0


